<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/Transition</item>
    </style>

    <style name="AppTheme.colorDisabled" parent="AppTheme">
        <item name="android:windowBackground">@color/colorDisabled</item>
    </style>

    <style name="AppTheme.colorPrimaryLighter" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimaryLighter</item>
    </style>

    <style name="AppTheme.colorSecondary" parent="AppTheme">
        <item name="android:windowBackground">@color/colorSecondary</item>
    </style>

    <style name="Transition">
        <item name="android:windowEnterAnimation">@anim/float_up</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/bg_gradient</item>-->
        <item name="windowActionBar">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
